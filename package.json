{
  "name": "vite-vue3-electron-ts-template",
  "private": true,
  "version": "0.0.1",
  "author": "valibali",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run vite:build && tsc && electron-builder",
    "app:preview": "npm run vite:build && tsc && electron .",
    "test": "vitest --environment jsdom",
    "test:coverage": "vitest run --coverage --environment jsdom"
  },
  "build": {
    "appId": "vite-vue3-electron-ts-template",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "^2.4.3",
    "concurrently": "^7.2.2",
    "electron": "^30.1.0",
    "electron-builder": "^25.0.0-alpha.9",
    "jsdom": "^24.0.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vitest": "^1.2.1",
    "vue-tsc": "^0.34.7"
  }
}
